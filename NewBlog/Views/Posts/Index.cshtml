@model IEnumerable<NewBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>My Blog</h2>

<div>
    @Html.ActionLink("Create New", "Create")
    <div class="form-group">

    </div>
</div>

@foreach (var item in Model)

{
    <div class="jumbotron">
        <h2>@item.Title</h2>
        <div class="row">
            <div class="col-md-8">
                <img src="~/Images/Tag icon.png" height="20" width="20" />
                @foreach (var i in item.Tags)
                {
                    <text> @i.Name |</text>

                }
            </div>
            <div class="col-md-4">
                <p> @DateTime.Now.Date.ToShortDateString() </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <text>@item.Text.Substring(0, 100)....</text>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <p>Views:@item.Views</p>
            </div>
            <div class="col-md-4">
                Author: @item.AuthorName.Author_Name</div>
        <div class="col-md-4">
            <p><a class="btn btn-default" href="/Posts/Details/@item.ID">View Post &raquo;</a></p>
        </div>

    </div>
        </div>
}


